{
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "**/*.ts",
      "options": {
        "parser": "typescript",
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.{scss,less,css}",
      "options": {
        "singleQuote": false,
        "semi": true
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [".prettierrc", ".stylelintrc", ".lintstagedrc"],
      "options": {
        "parser": "json"
      }
    }
  ]
}
