{
  "name": "rollup-demo",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "dev": "rollup -w -c",
    "build": "rollup -c",
    "format": "prettier --write package.json 'src/**/*.{js,ts,html}'"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --write",
      "yarn lint"
    ],
    "package.json": [
      "prettier --write"
    ],
    "src/**/*.html": [
      "prettier --write"
    ]
  }
}
